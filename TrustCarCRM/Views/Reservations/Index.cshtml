@model IEnumerable<TrustCarCRM.Models.Reservation>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date_Reservation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date_Expiration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Statut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClientReservations)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehiculeReservations)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UtilisateurReservations)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date_Reservation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date_Expiration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Statut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClientReservations.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehiculeReservations.VehiculeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UtilisateurReservations.UtilisateurId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ReservationId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ReservationId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ReservationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
