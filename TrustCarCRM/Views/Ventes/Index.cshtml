@model IEnumerable<TrustCarCRM.Models.Vente>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date_Vente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Montant_Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Methode_Paiement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Statut_Paiement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClientVentes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehiculeVentes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UtilisateurVentes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date_Vente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Montant_Total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Methode_Paiement)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Statut_Paiement)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClientVentes.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehiculeVentes.VehiculeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UtilisateurVentes.UtilisateurId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VenteId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VenteId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VenteId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
