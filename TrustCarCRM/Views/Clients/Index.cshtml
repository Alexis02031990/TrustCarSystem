@model IEnumerable<TrustCarCRM.Models.Client>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom_Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prenom_Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adresse_Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email_Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telephone_Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date_Inscription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom_Client)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenom_Client)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresse_Client)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email_Client)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telephone_Client)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date_Inscription)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
